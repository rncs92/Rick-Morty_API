<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Rick&Morty</title>
</head>
<body>
<div class="bg-cyan-950">
    <header>
        <div class="text-5xl font-semibold text-center text-fuchsia-700 py-10 border-8 border-indigo-500/50">
            <h1>Rick & Morty Character Encyclopedia</h1>
        </div>
    </header>
    <br>
    <div class="grid grid-cols-4 gap-2">
        {% for character in characters %}
            <div class="max-w-sm bg-cyan-700 border border-zinc-950 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                <img class="rounded-t-lg" src="{{ character.avatar }}" alt="" style="display: block; margin: 0 auto;" />
                <div class="p-5">
                    <h3 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ character.name }}</h3>
                    <p class="mb-1 font-normal text-gray-800 dark:text-gray-400">
                        <strong>Status: {% if character.status == 'Dead' %}
                                <span class="font-bold text-red-900 dark:text-gray-400">{{ character.status }}</span>
                            {% endif %}
                            {% if character.status == 'Alive' %}
                                <span class="font-bold text-green-900 dark:text-gray-400">{{ character.status }}</span>
                            {% endif %}
                            {% if character.status == 'unknown' %}
                                <span class="font-bold text-gray-700 dark:text-gray-400">{{ character.status }}</span>
                            {% endif %}
                        </strong>
                    </p>
                    <p class="mb-1 font-normal text-gray-800 dark:text-gray-400"><strong>Species: </strong> {{ character.species }}</p>
                    <p class="mb-1 font-normal text-gray-800 dark:text-gray-400"><strong>Last known location: </strong> {{ character.location }}</p>
                    <p class="mb-1 font-normal text-gray-800 dark:text-gray-400"><strong>First seen in: </strong>{{ character.firstepisode.name }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="flex justify-center items-center">
        <button class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-l">
            <a href="/">Previous</a>
        </button>
    </div>
</div>
</body>
<footer
        class="bg-neutral-200 text-center dark:bg-neutral-700 lg:text-left">
    <div class="p-4 text-center text-neutral-700 dark:text-neutral-200">
        © 2023 Copyright:
        <a
                class="text-neutral-800 dark:text-neutral-400"
                href="https://instagram.com/skepausis/"
        >Jānis Šķēps</a
        >
    </div>
</footer>
</html>